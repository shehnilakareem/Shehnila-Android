                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:popupBackground="@null"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
