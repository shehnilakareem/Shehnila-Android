            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subject_to_study"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/studclassEdit"
                    android:layout_marginLeft="20dp"

                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Subject to Study"
                    android:textColor="@color/blackcolor"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/colorRed" />
            </LinearLayout>

            <EditText
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:id="@+id/subjectTostudyEdit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/pfname"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_edit_bg"
                android:hint="Enter Subject you want tution for."
                android:paddingLeft="10dp"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pfnameEdit"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"

                    android:layout_marginBottom="5dp"
                    android:text="Official Phone Number"
                    android:textColor="@color/blackcolor"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/colorRed" />
            </LinearLayout>

            <EditText
                android:inputType="phone"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:id="@+id/phoneEdit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/plname"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_edit_bg"
                android:hint="Enter your official phone number"
                android:paddingLeft="10dp"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/emil"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plnameEdit"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:text="Official Email"
                android:textColor="@color/blackcolor"
                android:textSize="17dp" />

            <EditText
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:id="@+id/emailEdit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/pemail"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_edit_bg"
                android:hint="Enter your official email address"
                android:paddingLeft="10dp"
                android:textSize="13dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/durationBtn"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Introduce yourself"
                    android:textColor="@color/blackcolor"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/colorRed" />
            </LinearLayout>

            <EditText
                android:id="@+id/introductionEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/introduction"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_edit_bg"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="90"
                android:minLines="4"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:scrollbars="vertical"
                android:textColorHint="@color/darkgrey"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reasonEdit"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="What you are seeking?"
                    android:textColor="@color/blackcolor"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(optional)"
                    android:textColor="@color/colorRed" />
            </LinearLayout>

            <EditText
                android:id="@+id/seekingEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/introduction"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_edit_bg"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="90"
                android:minLines="4"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:scrollbars="vertical"
                android:textColorHint="@color/darkgrey"
                android:textSize="13dp" />

            <Button
                android:id="@+id/submitBtn"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_below="@+id/signatureIv"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_btn_bg"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="submit"
                android:textAllCaps="false" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>