<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CodeVerificationActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Base.ThemeOverlay.AppCompat">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_layout" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_below="@+id/toolbarlayout"
        android:id="@+id/codeLayout"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <EditText
            android:id="@+id/digit1"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:inputType="number"
            android:maxLength="1"
            android:imeActionId="1"
            android:imeOptions="actionNext"
            android:gravity="center"
            android:background="@drawable/shape_bg_edit"
            android:layout_marginRight="8dp"
            />
        <EditText
            android:inputType="number"
            android:imeOptions="actionNext"
            android:imeActionId="2"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="25dp"
            android:id="@+id/digit2"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_bg_edit"
            android:layout_marginRight="8dp"
            />
        <EditText
            android:inputType="number"
            android:imeOptions="actionNext"
            android:imeActionId="3"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="25dp"
            android:id="@+id/digit3"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_bg_edit"
            android:layout_marginRight="8dp"
            />
        <EditText
            android:inputType="number"
            android:imeOptions="actionNext"
            android:imeActionId="4"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="25dp"
            android:id="@+id/digit4"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_bg_edit"
            android:layout_marginRight="8dp"
            />

        <EditText
            android:inputType="number"
            android:imeOptions="actionNext"
            android:imeActionId="5"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="25dp"
            android:id="@+id/digit5"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_bg_edit"
            android:layout_marginRight="8dp"
            />
        <EditText
            android:inputType="number"
            android:imeOptions="actionDone"
            android:imeActionId="6"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="25dp"
            android:id="@+id/digit6"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_bg_edit"

            />

    </LinearLayout>
    <Button
        android:layout_below="@+id/codeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify"
        />
</RelativeLayout>